{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "outDir": "./",
        "rootDir": "./",
        "strict": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "removeComments": false,
        "noImplicitAny": true
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}